{
  "name": "mistho-scraper",
  "version": "1.0.0",
  "description": "",
  "main": "./dist/index.js",
  "scripts": {
    "build": "tsc -p .",
    "build:watch": "tsc -w",
    "build:live": "nodemon --watch 'src/**/*.ts' --exec \"ts-node\" src/index.ts",
    "clean": "rm -rf ./dist/* ",
    "start": "node dist/index.js",
    "dev": "tsc -w & nodemon",
    "test": "jest --coverage",
    "test:watch": "jest --watch --coverage",
    "test:ci": "CI=true jest --coverage --coverageReporters text-summary",
    "report:coverage": "start ./coverage/lcov-report/index.html",
    "lint": "tslint --project tsconfig.json",
    "dist": "npm run build && sh dist.sh",
    "prettify": "prettier --write \"src/**/*.ts\""
  },
  "author": "mradman",
  "license": "ISC",
  "devDependencies": {
    "@types/body-parser": "^1.17.1",
    "@types/compression": "^1.7.0",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.1",
    "@types/jest": "^27.0.0",
    "@types/mongoose": "^5.3.17",
    "@types/node": "^11.9.4",
    "husky": "^1.0.0-rc.13",
    "jest": "^27.0.0",
    "nodemon": "^1.19.1",
    "prettier": "2.5.1",
    "pretty-quick": "^1.10.0",
    "ts-jest": "^27.0.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "axios": "^0.21.2",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.17.1",
    "mongoose": "^5.7.1",
    "puppeteer": "^13.5.2",
    "ts-node": "^10.4.0",
    "tslint": "^5.20.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && pretty-quick --staged --verbose && npm run build",
      "pre-push": "npm run test"
    }
  },
  "jest": {
    "setupFiles": [
      "dotenv/config"
    ],
    "testEnvironment": "test"
  }
}
